<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.websocket_service.dao.FileInfoDao">
    <resultMap id="BaseResultMap"
               type="com.example.websocket_service.entity.FileInfo">
        <!-- WARNING - @mbg.generated -->
        <id column="id" jdbcType="BIGINT" property="id" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="type" jdbcType="VARCHAR" property="type" />
        <result column="size" jdbcType="BIGINT" property="size" />
        <result column="url" jdbcType="VARCHAR" property="url" />
        <result column="md5" jdbcType="VARCHAR" property="md5" />
        <result column="is_delete" jdbcType="TINYINT" property="isDelete"/>
        <result column="user_id" jdbcType="VARCHAR" property="userId"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createdTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updatedTime"/>
    </resultMap>
    <select id="selectByMd5" parameterType="String" resultMap="BaseResultMap">
        select * from config_files
        where 1=1
        <if test="md5 != null and md5 != ''">
            AND md5 = #{md5}
        </if>
        order by id asc
    </select>

    <insert id="save" parameterType="com.example.websocket_service.entity.FileInfo">
        insert into config_files (id,name,type,size,url,is_delete,md5,user_id,create_time,update_time)
        values (#{id},#{name},#{type},#{size},#{url},#{isDelete},#{md5},#{userId},#{createdTime},#{updatedTime})
    </insert>

    <delete id="deletedFile" parameterType="Integer">
        delete f from config_files f where f.id = #{id}
    </delete>

    <update id="updateTime">
        update config_files set update_time = #{updateTime} where id = #{id}
    </update>

    <select id="selectByUrl" parameterType="String" resultMap="BaseResultMap">
        select name,size from config_files
        where 1=1
        <if test="url != null and url != ''">
            AND url = #{url}
        </if>
    </select>
</mapper>